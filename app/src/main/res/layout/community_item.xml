<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/share_community"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profile_pic_community"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
             />

            <TextView
                android:id="@+id/community_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/dm_sans_bold"
                android:text="Hemanth Krishna"
                android:textSize="16sp"
                app:layout_constraintStart_toEndOf="@+id/profile_pic_community"
                app:layout_constraintTop_toTopOf="@+id/profile_pic_community" />

            <TextView
                android:id="@+id/course_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Kotlin Course"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/community_username"
                app:layout_constraintTop_toBottomOf="@+id/community_username" />

            <TextView
                android:id="@+id/date_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:text="11th October 2020"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/community_username"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/community_username" />

            <View
                android:id="@+id/view"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue_accent"
                app:layout_constraintEnd_toEndOf="@+id/date_community"
                app:layout_constraintStart_toStartOf="@+id/profile_pic_community"
                app:layout_constraintTop_toBottomOf="@+id/profile_pic_community" />

            <View
                android:id="@+id/view2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginTop="16dp"
                android:background="@color/dark_grey_accent"
                app:layout_constraintEnd_toEndOf="@+id/date_community"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/profile_pic_community"
                app:layout_constraintTop_toBottomOf="@+id/review_community" />

            <TextView
                android:id="@+id/review_community"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="This course is amazing \n random review \n i really love it"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="@+id/date_community"
                app:layout_constraintStart_toStartOf="@+id/profile_pic_community"
                app:layout_constraintTop_toBottomOf="@+id/view" />

            <ImageView
                android:id="@+id/like_community"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@+id/view2"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:srcCompat="@drawable/ic_baseline_thumb_up_24"
                app:tint="@color/dark_grey_accent" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="@+id/date_community"
                app:layout_constraintTop_toBottomOf="@+id/view2"
                app:srcCompat="@drawable/ic_baseline_share_24"
                app:tint="@color/primary_text_color" />

            <TextView
                android:id="@+id/likes_community"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="0"
                app:layout_constraintBottom_toBottomOf="@+id/like_community"
                app:layout_constraintStart_toEndOf="@+id/like_community"
                app:layout_constraintTop_toTopOf="@+id/like_community" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>